<?xml version="1.0" encoding="utf-8"?>
<!-- 消息列表子项 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingLeft="@dimen/common_padding2"
              android:paddingRight="@dimen/common_padding2">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="30px"
        android:layout_marginTop="20px"
        android:background="@drawable/shp_message_time"
        android:maxLines="1"
        android:paddingLeft="16px"
        android:paddingRight="16px"
        android:text="2017-2-16 14:54:00"
        android:textColor="@color/white"
        android:textSize="@dimen/little_font_size"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@drawable/sl_bg_message"
        android:paddingBottom="48px"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingRight="@dimen/common_padding2"
        android:paddingTop="48px">

        <ImageView
            android:id="@+id/iv_message_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message_type_notification"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@id/iv_message_type"
            android:maxLines="1"
            android:text="服务结算通知"
            android:textColor="@color/black_text"
            android:textSize="32px"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_message_type"
            android:layout_marginTop="20px"
            android:text="您的使用期限即将到期，如需继续使用请购买正式版，如需继续使用请购买正式版，如需继续使用请购买正式版"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/little_font_size"/>

        <TextView
            android:id="@+id/tv_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_content"
            android:layout_marginTop="20px"
            android:maxLines="1"
            android:text="购买正式版"
            android:textColor="#ff7043"
            android:textSize="@dimen/little_font_size"
            android:visibility="gone"/>
    </RelativeLayout>


</LinearLayout>