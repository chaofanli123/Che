<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_bg"
 >
    <LinearLayout
        android:id="@+id/lin_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <com.victor.che.widget.ClearEditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/common_padding2"
            android:layout_marginRight="16px"
            android:layout_weight="1"
            android:background="@drawable/sl_search"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="15dp"
            android:hint="@string/search_hint"
            android:imeOptions="actionSearch"
            android:maxLength="11"
            android:paddingLeft="30px"
            android:paddingRight="15px"
            android:singleLine="true"
            android:textColor="@color/black_text"
            android:textColorHint="@color/text_color_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_28px"/>

        <ImageView
            android:layout_width="@dimen/common_topbar_height"
            android:layout_height="match_parent"
            android:onClick="back"
            android:scaleType="center"
            android:visibility="gone"
            android:src="@drawable/sl_topbar_close"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginBottom="@dimen/item_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.phillipcalvin.iconbutton.IconButton
            android:id="@+id/btn_order_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sl_common_white_btn"
            android:drawableRight="@drawable/sl_dropdown"
            android:maxLines="1"
            android:text="类型"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_28px"
            app:iconPadding="20px"/>
        <com.victor.che.widget.ClearEditText
            android:id="@+id/tv_time_gongshi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_custom_edit"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="公示时间"
            android:textSize="@dimen/font_size_28px"
            android:inputType="number"
            android:textColor="@color/black_text"
            android:gravity="center"
            android:textColorHint="@color/light_gray_text"
            />
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/divider"/>

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/pcfl_user_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <com.victor.che.widget.MyRecyclerView
            android:id="@+id/recycler_usr_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

</LinearLayout>
