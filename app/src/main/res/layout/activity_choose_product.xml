<?xml version="1.0" encoding="utf-8"?><!--选择可用服务的界面-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        android:background="@color/theme_color">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/common_topbar_height"
            android:layout_height="match_parent"
            android:onClick="back"
            android:scaleType="center"
            android:src="@drawable/sl_topbar_back"/>

        <TextView
            android:id="@id/tv_topbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/topbar_font_size"/>

        <TextView
            android:id="@+id/topbar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sl_common_theme_btn_corner"
            android:gravity="center"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/little_font_size"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_category"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/category_checked"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chk_select_all"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:button="@null"
                android:drawableRight="@drawable/sl_radiobutton"
                android:gravity="center"
                android:paddingRight="30px"
                android:text="全部服务"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/little_font_size"/>

            <include layout="@layout/common_divider"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>