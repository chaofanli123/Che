<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg"
 >
    <LinearLayout
        android:id="@+id/lin_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <com.victor.che.widget.ClearEditText
            android:id="@+id/et_search_yaowuname"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="16px"
            android:layout_weight="1"
            android:background="@drawable/sl_search"
            android:hint="药物名称"
            android:imeOptions="actionSearch"
            android:paddingLeft="30px"
            android:paddingRight="15px"
            android:textColor="@color/black_text"
            android:textColorHint="@color/text_color_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_28px"/>
        <com.victor.che.widget.ClearEditText
            android:id="@+id/et_search_en_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="16px"
            android:layout_weight="1"
            android:background="@drawable/sl_search"
            android:hint="英文名"
            android:imeOptions="actionSearch"
            android:paddingLeft="30px"
            android:paddingRight="15px"
            android:textColor="@color/black_text"
            android:textColorHint="@color/text_color_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_28px"/>
        <com.victor.che.widget.ClearEditText
            android:id="@+id/et_search_another_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="16px"
            android:layout_weight="1"
            android:background="@drawable/sl_search"
            android:hint="别名"
            android:imeOptions="actionSearch"
            android:paddingLeft="30px"
            android:paddingRight="15px"
            android:textColor="@color/black_text"
            android:textColorHint="@color/text_color_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_28px"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginBottom="@dimen/item_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.victor.che.widget.ClearEditText
            android:id="@+id/et_search_yinyongyiju"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="16px"
            android:layout_weight="8"
            android:background="@drawable/sl_search"
            android:hint="引用依据"
            android:imeOptions="actionSearch"
            android:paddingLeft="30px"
            android:paddingRight="15px"
            android:textColor="@color/black_text"
            android:textColorHint="@color/text_color_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_28px"/>
        <ImageView
            android:id="@+id/img_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:src="@drawable/ic_search"
            />
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/divider"/>

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/pcfl_user_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <com.victor.che.widget.MyRecyclerView
            android:id="@+id/recycler_usr_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

</LinearLayout>
