<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_play"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/black"
        android:id="@+id/player_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <com.ezvizuikit.open.EZUIPlayer
            android:id="@+id/player_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/screen_status_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#CC282828"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_video_pause"
                android:layout_marginLeft="5dp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/btn_play" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:id="@+id/screen_status_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iconfont_enter_32"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
