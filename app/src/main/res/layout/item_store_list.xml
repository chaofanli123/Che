<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/iv_store_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_def_avatar"/>

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_padding2"
        android:layout_marginRight="@dimen/common_padding2"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@+id/iv_gotonext"
        android:layout_toRightOf="@id/iv_store_img"
        android:text="旗舰店"
        android:textStyle="bold"
        android:textColor="@color/black_text"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tv_store_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_store_name"
        android:layout_marginLeft="@dimen/common_padding2"
        android:layout_marginRight="@dimen/common_padding2"
        android:layout_marginTop="@dimen/common_padding2"
        android:layout_toLeftOf="@+id/iv_gotonext"
        android:layout_toRightOf="@id/iv_store_img"
        android:text="郑州"
        android:textColor="@color/light_gray_text"
        android:textSize="@dimen/little_font_size"
        />

    <ImageView
        android:id="@+id/iv_gotonext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right"/>


</RelativeLayout>