<?xml version="1.0" encoding="utf-8"?>
<!-- 登录界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:background="@color/theme_color">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70px"
                    android:src="@drawable/login_logo"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/bg_index_data"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_marginTop="90px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_username"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/common_padding2"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请输入用户名或手机号"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/common_padding2"
                    android:paddingRight="@dimen/common_padding2"
                    android:textColor="@color/black_text"
                    android:textColorHint="#cccccc"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/middle_font_size"/>
                <View
                    android:id="@+id/divider"
                    android:layout_width="1px"
                    android:layout_height="40px"
                    android:background="@color/divider"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/btn_get_captcha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:gravity="center"
                    android:onClick="doGetCaptcha"
                    android:paddingLeft="@dimen/common_padding2"
                    android:paddingRight="@dimen/common_padding2"
                    android:text="获取验证码"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/font_size_28px"
                    android:visibility="gone"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/common_padding2"
                android:layout_marginRight="@dimen/common_padding2"
                android:background="@color/divider"/>

            <LinearLayout
                android:id="@+id/area_pwd"
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_pwd"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请输入6-16位密码"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/common_padding2"
                    android:paddingRight="@dimen/common_padding2"
                    android:textColor="@color/black_text"
                    android:textColorHint="#cccccc"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/middle_font_size"/>

                <CheckBox
                    android:id="@+id/chk_show_pwd"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginLeft="@dimen/common_padding2"
                    android:layout_marginRight="@dimen/common_padding2"
                    android:background="@drawable/sl_show_hide_pwd"
                    android:button="@null"/>

            </LinearLayout>

            <com.victor.che.widget.ClearEditText
                android:id="@+id/et_captcha"
                style="@style/common_edittext"
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_marginLeft="@dimen/common_padding2"
                android:layout_marginRight="@dimen/common_padding2"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2"
                android:textColor="@color/black_text"
                android:textColorHint="#cccccc"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/middle_font_size"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/common_padding2"
                android:layout_marginRight="@dimen/common_padding2"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/tv_switch_login_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="64px"
                android:layout_marginTop="40px"
                android:clickable="true"
                android:text="验证码登录"
                android:textSize="@dimen/font_size_28px"
                android:visibility="gone"
                />

            <TextView
                android:id="@id/btn_operate"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginLeft="@dimen/common_padding2"
                android:layout_marginRight="@dimen/common_padding2"
                android:layout_marginTop="100px"
                android:background="@drawable/bg_login_button"
                android:gravity="center"
                android:text="登 录"
                android:textColor="@color/textcolor_white_pressed"
                android:textSize="@dimen/large_font_size"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_padding2"
                android:layout_marginRight="@dimen/common_padding2"
                android:background="@drawable/shadow_login_button"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>