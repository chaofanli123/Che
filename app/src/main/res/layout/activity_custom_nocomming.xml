<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_nocomming"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg"
    tools:context="com.victor.che.ui.CustomNocommingActivity">
<include layout="@layout/top_bar_commom"/>
    <com.victor.che.widget.PtrlMeiTuanFrameLayout
        android:id="@id/mPtrFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">
                    <com.victor.che.widget.MyRecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="输入未到店天数区间"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:layout_marginTop="21dp"
                        android:layout_marginLeft="19dp"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#89d370"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/ed_tiem_start"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_custom_edit"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="16dp"
                        android:hint="输入天数区间"
                        android:inputType="number"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/black_text"
                        android:gravity="center"
                        android:textColorHint="@color/light_gray_text"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="到"
                        android:textColor="@color/black_text"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        />
                    <EditText
                        android:id="@+id/et_time_end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_custom_edit"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="16dp"
                        android:hint="输入天数区间"
                        android:textSize="@dimen/sp_12"
                        android:inputType="number"
                        android:textColor="@color/black_text"
                        android:gravity="center"
                        android:textColorHint="@color/light_gray_text"
                        />
                    <TextView
                        android:id="@+id/tv_add_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_add"
                        android:drawablePadding="5dp"
                        android:text="新增"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.victor.che.widget.PtrlMeiTuanFrameLayout></LinearLayout>
