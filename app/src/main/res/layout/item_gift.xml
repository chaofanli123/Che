<?xml version="1.0" encoding="UTF-8"?>
<!-- 赠品列表子项 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="50dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_margin"
        android:background="@color/common_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingRight="@dimen/common_padding2">

        <TextView
            android:id="@+id/tv_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_gift"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="赠品"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/font_size_28px"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:text="取消"
            android:textColor="@color/red"
            android:textSize="@dimen/font_size_28px"/>
    </RelativeLayout>

    <include layout="@layout/common_divider"/>

    <LinearLayout
        android:id="@+id/area_choose_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding">

        <TextView
            android:layout_width="230px"
            android:layout_height="wrap_content"
            android:text="服务类别"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/middle_font_size"/>

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:drawablePadding="20px"
            android:drawableRight="@drawable/ic_arrow_right"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:text="洗车"
            android:textColor="@color/black_text"
            android:textColorHint="@color/text_color_hint"
            android:textSize="26px"/>

    </LinearLayout>

    <include layout="@layout/common_divider"/>

    <LinearLayout
        android:id="@+id/area_choose_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding">

        <TextView
            android:layout_width="230px"
            android:layout_height="wrap_content"
            android:text="服务"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/middle_font_size"/>

        <TextView
            android:id="@+id/tv_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:drawablePadding="20px"
            android:drawableRight="@drawable/ic_arrow_right"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:text="小车普洗"
            android:textColor="@color/black_text"
            android:textColorHint="@color/text_color_hint"
            android:textSize="26px"/>

    </LinearLayout>

    <include layout="@layout/common_divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingRight="@dimen/common_padding2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="数量"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/middle_font_size"/>

        <com.victor.che.widget.AmountView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/amount_view"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:btnTextSize="@dimen/middle_font_size"
            app:tvWidth="100px"/>
    </RelativeLayout>
</LinearLayout>