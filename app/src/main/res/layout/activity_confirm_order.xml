<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        android:background="@color/theme_color"
        >

        <ImageView
            android:layout_width="@dimen/common_topbar_height"
            android:layout_height="match_parent"
            android:onClick="back"
            android:scaleType="center"
            android:src="@drawable/sl_topbar_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认收银"
            android:textColor="@color/white"
            android:textSize="@dimen/topbar_font_size"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/common_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/common_padding2"
                android:gravity="center_vertical"
                android:layout_height="@dimen/item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户信息"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/common_padding"
                    />
            </LinearLayout>

            <include layout="@layout/common_divider"/>

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_padding2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="豫A12345"
                    android:textSize="@dimen/font_size_28px"
                    android:textColor="@color/dark_gray_text"
                    android:id="@+id/tv_car_no"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13836896547"
                    android:textSize="@dimen/font_size_28px"
                    android:textColor="@color/dark_gray_text"
                    android:id="@+id/tv_car_user_mobile"
                    android:layout_toRightOf="@+id/tv_car_no"
                    android:layout_marginLeft="@dimen/common_padding2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-05-03"
                    android:textColor="@color/light_gray_text"
                    android:textSize="@dimen/little_font_size"
                    android:layout_below="@+id/tv_car_no"
                    android:layout_marginTop="@dimen/item_margin"
                    android:id="@+id/tv_creat_time"
                    />

            </RelativeLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/common_padding2"
                android:layout_marginTop="@dimen/item_margin"
                android:gravity="center_vertical"
                android:layout_height="@dimen/item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务信息"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/common_padding"
                    />
            </LinearLayout>

            <include layout="@layout/common_divider"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


            <RelativeLayout
                android:layout_marginTop="@dimen/item_margin"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2"
                android:gravity="center_vertical"
                android:layout_height="@dimen/item_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格确认"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/common_padding"
                    />

                <TextView
                    android:id="@+id/tv_all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.00元"
                    android:textSize="@dimen/little_font_size"
                    android:textColor="@color/dark_gray_text"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价"
                    android:textSize="@dimen/little_font_size"
                    android:textColor="@color/dark_gray_text"
                    android:layout_toLeftOf="@+id/tv_all_price"
                    android:layout_marginRight="@dimen/item_margin"
                    />

            </RelativeLayout>

            <include layout="@layout/common_divider"/>

            <LinearLayout
                style="@style/style_receipt_liner"
                >
                <TextView
                    style="@style/style_receipt_text"
                    android:text="成交价"
                    />
                <EditText
                    android:id="@+id/et_sale_price"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:cursorVisible="true"
                    android:ellipsize="end"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/c_ef5350"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:imeOptions="actionDone"
                    android:textSize="@dimen/font_size_28px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textSize="@dimen/font_size_28px"
                    android:textColor="@color/dark_gray_text"
                    android:layout_marginRight="@dimen/common_padding2"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@id/btn_operate"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/theme_color"
        android:text="收银"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/common_padding2"/>

</LinearLayout>