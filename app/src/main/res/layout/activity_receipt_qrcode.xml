<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_topbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_padding2"
                android:layout_marginRight="@dimen/common_padding2"
                android:layout_marginTop="49px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_actual_pay"
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:background="@drawable/shp_receipt_money"
                    android:gravity="center"
                    android:text="0.00元"
                    android:textColor="@color/theme_color"
                    android:textSize="48px"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="168px"
                    android:paddingTop="96px">

                    <ImageView
                        android:id="@+id/iv_qrcode"
                        android:layout_width="460px"
                        android:layout_height="460px"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="80px"
                        android:scaleType="fitXY"/>
                </RelativeLayout>

                <include layout="@layout/common_divider"/>

                <Button
                    android:id="@id/btn_operate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height"
                    android:background="@drawable/sl_confirm_receipt"
                    android:text="确认收款"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/middle_font_size"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
