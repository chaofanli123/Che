<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_padding2"
              android:layout_marginTop="@dimen/common_padding2"
              android:layout_marginRight="@dimen/common_padding2"
              android:padding="@dimen/common_padding2"
                android:background="@color/white">


    <LinearLayout
        android:id="@+id/ll_car_no"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_padding2"
            android:text="豫A12345"
            android:textSize="@dimen/common_padding2"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/tv_car_no"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝马5系"
            android:textSize="@dimen/little_font_size"
            android:textColor="@color/dark_gray_text"
            android:layout_marginTop="@dimen/common_padding2"
            android:id="@+id/tv_car_brand"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@+id/ll_car_no"
        android:layout_marginLeft="@dimen/common_padding2"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行驶里程:"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/little_font_size"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10万公里"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/black_text"
            android:id="@+id/tv_car_mileage"
            android:layout_marginTop="@dimen/common_padding2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下次保养时间:"
            android:textSize="@dimen/little_font_size"
            android:textColor="@color/light_gray_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-5-24"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/black_text"
            android:id="@+id/tv_car_next_time"
            android:layout_marginTop="@dimen/common_padding2"
            />
    </LinearLayout>

</RelativeLayout>