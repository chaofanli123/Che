<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/common_topbar"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_yangzhichangmingcheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="养殖场名称："
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_28px"
            />
        <TextView
            android:id="@+id/tv_cunzaiwenti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="存在问题:"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_28px"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/tv_zhenggaijianyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="整改建议"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_28px"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/tv_jiancharen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="检查人:"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_28px"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_beijiancharen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="被检查人:"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_28px"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_jianchashijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="检查时间:"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_28px"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

</LinearLayout>
