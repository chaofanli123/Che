<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_san_ze_xian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:text="三者险"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="7dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/tv_jiaoandcar_baoxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black_text"
                android:text="不计免赔"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baoxian_select"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:layout_marginRight="16dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/common_bg"/>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
        android:id="@+id/tv_notoubao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black_text"
        android:text="不投保"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        />
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_duihao"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:layout_marginRight="16dp"
        />
        </RelativeLayout>

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_bg"/>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
        android:id="@+id/tv_toubao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black_text"
        android:text="投保"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        />
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_duihao"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:layout_marginRight="16dp"
        />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/common_bg"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <Button
                    android:textSize="@dimen/sp_16"
                    android:text="取消"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/bt_qx"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/sl_btn_get_captcha"
                    />

                <Button
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:text="确定"
                    android:background="@drawable/sl_confirm_pay"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/bt_qd"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />
            </LinearLayout>


    </LinearLayout>

</LinearLayout>
