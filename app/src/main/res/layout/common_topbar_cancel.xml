<?xml version="1.0" encoding="utf-8"?><!-- 通用的标题栏2 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:background="@color/theme_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/sl_common_theme_btn_corner"
        android:gravity="center"
        android:onClick="back"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:text="取消"
        android:textColor="@color/textcolor_white_pressed"
        android:textSize="@dimen/font_size_28px"/>


    <TextView
        android:id="@id/tv_topbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/topbar_font_size"/>

    <TextView
        android:id="@+id/topbar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/sl_common_theme_btn_corner"
        android:gravity="center"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:text="保存"
        android:textColor="@color/textcolor_white_pressed"
        android:textSize="@dimen/font_size_28px"/>

</RelativeLayout>