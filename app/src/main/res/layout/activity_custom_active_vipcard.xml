<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_topbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/common_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="20px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:id="@+id/label_mobile"
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/middle_font_size"/>

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_mobile"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_padding"
                    android:layout_weight="1"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_size_28px"/>

                <ImageView
                    android:id="@+id/iv_choose_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/common_padding"
                    android:scaleType="center"
                    android:src="@drawable/sl_choose_customer"/>

            </LinearLayout>

            <include layout="@layout/common_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:text="车牌号"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/middle_font_size"/>

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_pln"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_padding"
                    android:layout_weight="1"
                    android:hint="请输入车牌号"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_size_28px"/>

                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/common_padding"
                    android:scaleType="center"
                    android:src="@drawable/ic_index_scan"/>
            </LinearLayout>
            <include layout="@layout/common_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/middle_font_size"/>

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_user_name"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_padding"
                    android:layout_weight="1"
                    android:hint="请输入姓名"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_size_28px"/>
            </LinearLayout>

            <include layout="@layout/common_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/item_margin"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:id="@+id/label_vipcard_name"
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:text="卡名称"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/middle_font_size"/>

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_vipcard_name"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_padding"
                    android:layout_weight="1"
                    android:hint="请输入卡名称"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_size_28px"/>

                <ImageView
                    android:id="@+id/iv_choose_vipcard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/common_padding"
                    android:scaleType="center"
                    android:src="@drawable/sl_choose_vipcard"/>
            </LinearLayout>

            <include layout="@layout/common_divider"/>

            <RelativeLayout
                android:id="@+id/area_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/sl_common_white_btn"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:text="卡类型"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/middle_font_size"/>

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="20px"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:maxLines="1"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="26px"/>
            </RelativeLayout>

            <include layout="@layout/common_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:id="@+id/label_face_value"
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:text="次数"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/middle_font_size"/>

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_face_value"
                    style="@style/common_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_padding"
                    android:hint="请输入卡的初始次数"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_size_28px"/>

            </LinearLayout>

            <include layout="@layout/common_divider"/>

            <LinearLayout
                android:id="@+id/area_choose_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding">

                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:text="可用服务"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/middle_font_size"/>

                <TextView
                    android:id="@+id/tv_service_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding"
                    android:drawablePadding="20px"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:maxLines="1"
                    android:text="全部服务"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="26px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="20px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:id="@+id/label_sale_price"
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="售价"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/middle_font_size"/>

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_sale_price"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_padding"
                    android:layout_marginRight="@dimen/common_padding"
                    android:layout_weight="1"
                    android:hint="请输入售价"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_size_28px"/>

            </LinearLayout>

            <include layout="@layout/common_divider"/>

            <RelativeLayout
                android:id="@+id/area_worker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/sl_common_white_btn"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="销售员"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/middle_font_size"/>

                <TextView
                    android:id="@+id/tv_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:gravity="right|center_vertical"
                    android:hint="请选择服务师傅"
                    android:maxLines="1"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="26px"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/area_gift"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/item_margin"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding">

                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:text="赠品"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/middle_font_size"/>

                <TextView
                    android:id="@+id/tv_gift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding"
                    android:drawablePadding="20px"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请选择赠品"
                    android:maxLines="1"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="26px"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_bottombar_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingRight="@dimen/common_padding2">

        <Button
            android:id="@id/btn_operate"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sl_confirm_pay"
            android:text="确认开卡"
            android:textColor="@color/white"
            android:textSize="32px"/>
    </RelativeLayout>
</LinearLayout>
