<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_topbar_height"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        android:background="@color/theme_color"
        android:gravity="center_vertical"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topbar_search"
            android:layout_width="0dp"
            android:layout_height="70px"
            android:layout_marginLeft="@dimen/common_padding2"
            android:layout_weight="1"
            android:background="@drawable/sl_search"
            android:drawableLeft="@drawable/ic_text_search"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="32px"
            android:text="@string/search_hint"
            android:textColor="#99ffffff"
            android:textSize="@dimen/font_size_28px"/>

        <ImageView
            android:id="@+id/topbar_right"
            android:layout_width="@dimen/common_topbar_height"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/sl_topbar_more"/>

    </LinearLayout>

</LinearLayout>
