<?xml version="1.0" encoding="utf-8"?>
<!-- 项目中白底红字按钮通用的selector样式 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/light_gray_bg"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/light_gray_bg"/>
            <corners android:radius="2dp"/>
            <stroke android:width="0.5dp" android:color="@color/light_gray_bg"/>
        </shape>
    </item>
</selector>