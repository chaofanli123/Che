            <RelativeLayout
                android:background="@color/white"
                android:id="@+id/ll_add_yuyin"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                >
                <TextView
                    android:id="@+id/tv_tianjiayvying"
                    android:layout_centerVertical="true"
                    style="@style/style_receipt_text"
                    android:text="添加语音"
                    />

                <ImageView
                    android:id="@+id/iv_luying"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_padding2"
                    android:src="@drawable/ic_arrow_right"/>

                <RelativeLayout
                    android:layout_toRightOf="@id/tv_tianjiayvying"
