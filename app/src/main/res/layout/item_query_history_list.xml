<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingRight="@dimen/common_padding2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_query_history"
            android:src="@drawable/icon_query_history"
            />
        <TextView
            android:id="@+id/tv_car_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="豫A12345"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/black_text"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_toRightOf="@+id/iv_query_history"
            />

        <TextView
            android:id="@+id/tv_query_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="报价中"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/dark_gray_text"
            />

    </RelativeLayout>

    <include layout="@layout/common_divider"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/common_padding2"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingTop="@dimen/padding_40px"
        android:paddingBottom="@dimen/padding_40px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_car_user_name"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/dark_gray_text"
            android:text="张三"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_car_brand_name"
            android:layout_below="@+id/tv_car_user_name"
            android:layout_marginTop="@dimen/item_margin"
            android:textSize="@dimen/little_font_size"
            android:textColor="@color/light_gray_text"
            android:text="宝马"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_query_time"
            android:text="2017-05-08"
            android:textSize="@dimen/little_font_size"
            android:textColor="@color/dark_gray_text"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

    <LinearLayout
        android:background="@color/light_gray_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_padding2"
        android:id="@+id/ll_query_other">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="失败原因:"
            android:textSize="@dimen/little_font_size"
            android:textColor="@color/dark_gray_text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:layout_marginTop="@dimen/item_margin"
            android:textSize="@dimen/little_font_size"
            android:textColor="@color/dark_gray_text"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_query_other2"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingRight="@dimen/common_padding2"
        android:background="@color/light_gray_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="查看报价信息"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/light_gray_text"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            />
    </LinearLayout>



</LinearLayout>