<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme.  Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 底部菜单栏Tab样式 -->
    <style name="tab_bottom">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">22px</item>
        <item name="android:paddingTop">8px</item>
        <item name="android:textColor">@color/textcolor_tab_bottom</item>
    </style>

    <!-- 顶部菜单栏Tab样式 -->
    <style name="tab_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">22px</item>
        <item name="android:textColor">@color/textcolor_tab_bottom</item>
    </style>


    <!-- button的样式 -->
    <style name="common_button">
        <item name="android:layout_width">550px</item>
        <item name="android:layout_height">90px</item>
        <item name="android:background">@drawable/sl_common_theme_btn_corner</item>
        <item name="android:textSize">36px</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- EditText -->
    <style name="common_edittext">
        <item name="android:background">@null</item>
    </style>

<!-- 加载样式-->
    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
       <!-- <item name="android:indeterminateDrawable">@anim/loading</item>-->
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
    </style>

    <!--二手车估值详情RelativeLayout样式 -->
    <style name="common_relativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_topbar_height</item>
        <item name="android:paddingLeft">@dimen/common_padding2</item>
        <item name="android:paddingRight">@dimen/common_padding2</item>
    </style>

    <!--收银界面textview样式 -->
    <style name="style_receipt_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">230px</item>
        <item name="android:paddingLeft">@dimen/common_padding2</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/font_size_28px</item>
    </style>

    <!--收银界面Lin样式 -->
    <style name="style_receipt_liner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_topbar_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="MyDialogStyle">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/activity_translate_in</item>
        <item name="android:windowExitAnimation">@anim/activity_translate_out</item>
    </style>


    <style name="dialogSlideAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_slide_out</item>
    </style>

</resources>
