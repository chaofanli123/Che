<?xml version="1.0" encoding="utf-8"?><!--会员卡列表子项-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding2">

        <TextView
            android:id="@+id/tv_vipcard_type_no"
            android:layout_width="wrap_content"
            android:layout_height="26px"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_vipcard_no"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:text="001"
            android:textColor="@color/white"
            android:textSize="22px"/>

        <TextView
            android:id="@+id/tv_vipcard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/tv_vipcard_type_no"
            android:maxLines="1"
            android:text="5次洗车卡"
            android:textColor="@color/black_text"
            android:textSize="32px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_vipcard_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:text="次卡"
            android:textColor="#1e88e5"
            android:textSize="26px"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_service_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_padding2"
        android:drawablePadding="32dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingRight="@dimen/common_padding2"
        android:text="可用服务"
        android:textColor="@color/light_gray_text"
        android:textSize="@dimen/little_font_size"/>

    <include
        layout="@layout/common_divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_active_vipcard"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_padding2"
            android:background="@drawable/sl_btn_recharge"
            android:gravity="center"
            android:paddingLeft="@dimen/common_padding2"
            android:paddingRight="@dimen/common_padding2"
            android:text="开卡"
            android:textColor="@color/textcolor_theme_color_pressed"
            android:textSize="26px"/>

        <TextView
            android:id="@+id/tv_customer_vipcard"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="50px"
            android:layout_toLeftOf="@id/tv_active_vipcard"
            android:background="@drawable/sl_btn_goto_index"
            android:gravity="center"
            android:paddingLeft="@dimen/common_padding2"
            android:paddingRight="@dimen/common_padding2"
            android:text="用户会员卡"
            android:textColor="@color/dark_gray_text"
            android:textSize="26px"/>
    </RelativeLayout>

</LinearLayout>