<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_topbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/common_bg"
        >

        <include
            layout="@layout/fragment_insurance_datail"
            />

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingRight="@dimen/common_padding2"
        >

        <TextView
            android:id="@+id/tv_pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="实付"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_28px"
            />

        <TextView
            android:id="@+id/tv_actual_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/tv_pay_text"
            android:text="200.00元"
            android:textColor="@color/c_ef5350"
            android:textSize="36px"
            />

        <Button
            android:id="@id/btn_operate"
            android:layout_width="240px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sl_confirm_pay"
            android:text="出保单"
            android:textColor="@color/white"
            android:textSize="32px"/>
    </RelativeLayout>
</LinearLayout>