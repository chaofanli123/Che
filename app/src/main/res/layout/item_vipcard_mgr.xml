<?xml version="1.0" encoding="utf-8"?><!--会员卡列表子项-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding2">

        <TextView
            android:id="@+id/tv_vipcard_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:text="C00132"
            android:textColor="@color/theme_color"
            android:textSize="32px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_vipcard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/tv_vipcard_id"
            android:maxLines="1"
            android:text="5次洗车卡"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_28px"/>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:text="有效期：永久"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/little_font_size"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_padding2"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingRight="@dimen/common_padding2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="手机号："
                android:textColor="@color/dark_gray_text"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_customer_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:maxLines="1"
                android:text="18888888"
                android:textColor="@color/dark_gray_text"
                android:textSize="26px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="余次："
                android:textColor="@color/dark_gray_text"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_vipcard_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:maxLines="1"
                android:text="2次"
                android:textColor="@color/dark_gray_text"
                android:textSize="26px"/>

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/common_divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:orientation="horizontal"
        android:paddingRight="@dimen/common_padding2">

        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sl_btn_recharge"
            android:gravity="center"
            android:paddingLeft="@dimen/common_padding2"
            android:paddingRight="@dimen/common_padding2"
            android:text="充值"
            android:textColor="@color/textcolor_recharge"
            android:textSize="26px"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="50px"
            android:layout_toLeftOf="@id/tv_recharge"
            android:background="@drawable/sl_btn_goto_index"
            android:gravity="center"
            android:paddingLeft="@dimen/common_padding2"
            android:paddingRight="@dimen/common_padding2"
            android:text="编辑"
            android:textColor="@color/dark_gray_text"
            android:textSize="26px"/>
    </RelativeLayout>

</LinearLayout>
