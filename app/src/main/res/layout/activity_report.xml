<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_topbar"/>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>

    <com.victor.che.widget.AutoRadioGroup
        android:id="@+id/mRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_bottombar_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tab_bottom_0"
            style="@style/tab_bottom"
            android:checked="true"
            android:drawableTop="@drawable/sl_daily_reports"
            android:text="日报"/>

        <RadioButton
            android:id="@+id/tab_bottom_1"
            style="@style/tab_bottom"
            android:drawableTop="@drawable/sl_weekly_reports"
            android:text="周报"/>

        <RadioButton
            android:id="@+id/tab_bottom_2"
            style="@style/tab_bottom"
            android:drawableTop="@drawable/sl_monthly_reports"
            android:text="月报"/>

    </com.victor.che.widget.AutoRadioGroup>

</LinearLayout>
