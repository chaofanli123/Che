<?xml version="1.0" encoding="utf-8"?><!--同用的下拉刷新界面-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">


    <!--<include layout="@layout/top_bar_commom_img"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        android:background="@color/theme_color"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ed_tiem_start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@drawable/bg_custom_edit"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:hint="输入开始时间"
            android:inputType="number"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black_text"
            android:gravity="center"
            android:textColorHint="@color/light_gray_text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            />
        <TextView
            android:id="@+id/et_time_end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@drawable/bg_custom_edit"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="输入结束时间"
            android:textSize="@dimen/sp_12"
            android:inputType="number"
            android:textColor="@color/black_text"
            android:gravity="center"
            android:textColorHint="@color/light_gray_text"
            />
        <ImageView
            android:id="@+id/img_search"
            android:layout_width="@dimen/common_topbar_height"
            android:layout_height="match_parent"
            android:src="@drawable/ic_topbar_search_normal"
            android:scaleType="center"
            />
        <ImageView
            android:id="@+id/topbar_right1"
            android:layout_width="@dimen/common_topbar_height"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/sl_topbar_more"/>
    </LinearLayout>

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@id/mPtrFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/lin_notarize"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
           android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/sl_confirm_pay"
            android:text="取消删除"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            />
        <Button
            android:id="@+id/btn_notarize"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/sl_confirm_pay"
            android:text="确定删除"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            />
    </LinearLayout>
</RelativeLayout>