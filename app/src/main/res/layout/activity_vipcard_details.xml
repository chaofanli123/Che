<?xml version="1.0" encoding="utf-8"?><!-- 会员详情界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_topbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/area_vipcard_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="20px"
                android:background="@drawable/sl_common_white_btn"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="名称"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/middle_font_size"/>

                <TextView
                    android:id="@+id/tv_vipcard_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="26px"/>
            </RelativeLayout>

            <include layout="@layout/common_divider"/>

            <RelativeLayout
                android:id="@+id/area_vipcard_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/sl_common_white_btn"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="类型"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/middle_font_size"/>

                <TextView
                    android:id="@+id/tv_vipcard_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="16dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="26px"/>
            </RelativeLayout>

            <include layout="@layout/common_divider"/>

            <RelativeLayout
                android:id="@+id/area_remain_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/sl_common_white_btn"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:id="@+id/label_face_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="可用次数"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/middle_font_size"/>

                <TextView
                    android:id="@+id/tv_face_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="26px"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/area_sale_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="20px"
                android:background="@drawable/sl_common_white_btn"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="售价"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/middle_font_size"/>

                <TextView
                    android:id="@+id/tv_sale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/font_size_28px"/>

            </RelativeLayout>

            <include layout="@layout/common_divider"/>

            <RelativeLayout
                android:id="@+id/area_original_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/sl_common_white_btn"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="原价"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/middle_font_size"/>

                <TextView
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/font_size_28px"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/area_service_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:background="@drawable/sl_common_white_btn"
                android:orientation="horizontal"
                android:paddingBottom="36px"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2"
                android:paddingTop="36px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用服务"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/middle_font_size"/>

                <TextView
                    android:id="@+id/tv_service_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:gravity="top"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="26px"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>