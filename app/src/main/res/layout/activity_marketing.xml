<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_marketing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    >
    <include layout="@layout/top_bar_commom"/>
    <RelativeLayout
        android:id="@+id/Rel_baoxian_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/sl_bg_message"
        >
        <ImageView
            android:id="@+id/img_baoxian"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_margin="24dp"
            android:src="@drawable/def_baoxian"
            android:scaleType="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/img_baoxian"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车险询价"
                android:textSize="@dimen/sp_16"
                android:textColor="#2c80ff"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资源整合，为用户推荐更适合的车险"
                android:layout_marginTop="16dp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/light_gray_text"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_arrow_right"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Rel_usercar_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/sl_bg_message"
        >
        <ImageView
            android:id="@+id/img_usercar_value"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_margin="24dp"
            android:src="@drawable/def_usercar"
            android:scaleType="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/img_usercar_value"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二手车估值"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/colorPrimaryDark"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快速精确评估二手车价格"
                android:layout_marginTop="16dp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/light_gray_text"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_arrow_right"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/sl_bg_message">
        <RelativeLayout
            android:id="@+id/Rel_follow_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/img_follow_user"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_margin="24dp"
                android:background="@drawable/ic_follow"
                android:scaleType="center"
                />
            <LinearLayout
                android:id="@+id/lin_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/img_follow_user"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户跟踪"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/purple"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进行精确用户管理"
                    android:layout_marginTop="16dp"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/light_gray_text"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            >
            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员卡到期"
                android:drawableLeft="@drawable/ic_endtiem_usecard"
                android:textColor="@color/dark_gray_text"
                android:textSize="12sp"
                android:drawablePadding="3dp"
                />
            <TextView
                android:id="@+id/tv_endmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_endmoney"
                android:text="会员卡余额不足"
                android:drawablePadding="3dp"
                android:layout_centerInParent="true"
                android:maxLines="1"
                android:textColor="@color/dark_gray_text"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_nocome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_nocome"
                android:layout_alignParentRight="true"
                android:text="长期未到店"
                android:drawablePadding="3dp"
                android:textColor="@color/dark_gray_text"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
