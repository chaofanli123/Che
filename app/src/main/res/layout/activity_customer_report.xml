<?xml version="1.0" encoding="utf-8"?><!--用户报表-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_topbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_color"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="40px"
                android:paddingTop="40px">

                <TextView
                    android:id="@+id/timepicker"
                    android:layout_width="250px"
                    android:layout_height="70px"
                    android:background="@drawable/sl_timepicker"
                    android:drawablePadding="20px"
                    android:drawableRight="@drawable/sl_dropdown"
                    android:gravity="center"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:text="2017-1-14"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_28px"/>

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120px"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="150px"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60px"
                    android:maxLines="1"
                    android:text="总用户人数(人)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_28px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="20px"
                    android:drawableTop="@drawable/ic_male"
                    android:gravity="center"
                    android:text="男性用户(人)"
                    android:textColor="@color/light_gray_text"
                    android:textSize="@dimen/little_font_size"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="20px"
                    android:drawableTop="@drawable/ic_female"
                    android:gravity="center"
                    android:text="女性用户(人)"
                    android:textColor="@color/light_gray_text"
                    android:textSize="@dimen/little_font_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_male_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/theme_color"
                    android:textSize="60px"/>

                <TextView
                    android:id="@+id/tv_female_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/theme_color"
                    android:textSize="60px"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90px"
                android:text="性别未知(人)"
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/little_font_size"/>

            <TextView
                android:id="@+id/tv_unknown_gender_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40px"
                android:text="0"
                android:textColor="@color/dark_gray_text"
                android:textSize="60px"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
