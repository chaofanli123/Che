<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_send_coupon_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg"
    tools:context="com.victor.che.ui.Coupon.SendCouponListActivity">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        android:background="@color/theme_color"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/common_topbar_height"
            android:layout_height="match_parent"
            android:onClick="back"
            android:scaleType="center"
            android:src="@drawable/sl_topbar_back"/>
        <TextView
            android:id="@+id/tv_titlename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_vipcard_type_dropdown"
            android:gravity="center"
            android:paddingLeft="@dimen/common_padding2"
            android:paddingRight="@dimen/common_padding2"
            android:textColor="@color/white"
            android:textSize="@dimen/middle_font_size"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
      >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rl_parse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="¥"
                android:textColor="@color/c_ef5350"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="40"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_coupon"
                android:textColor="@color/c_ef5350"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_money_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="满200可用"
                android:layout_below="@id/tv_coupon_price"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/little_font_size"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_coupon_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="仅限购买从单气服务"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_size_28px"
                android:layout_marginTop="26dp"
                />

            <TextView
                android:id="@+id/tv_coupon_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_below="@id/tv_coupon_message"
                android:text="限2017-6-7至2017-6-7使用"
                android:textColor="@color/light_gray_text"
                android:textSize="11sp"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/common_bg"
        >

        <EditText
            android:id="@+id/topbar_search"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/common_padding2"
            android:layout_marginRight="@dimen/common_padding2"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_search_dark"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_padding2"
            android:paddingRight="@dimen/common_padding2"
            android:hint="手机号 车牌号"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/font_size_28px"/>

    </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="发放记录"
                    android:textSize="13sp"
                    android:textColor="@color/dark_gray_text"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_bg"/>
            <com.victor.che.widget.PtrlMeiTuanFrameLayout
                android:id="@id/mPtrFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
        <com.victor.che.widget.MyRecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
            </com.victor.che.widget.PtrlMeiTuanFrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
