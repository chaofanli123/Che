<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/common_topbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/common_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_padding2"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="受保车辆:"
                    android:textSize="@dimen/font_size_28px"
                    android:textColor="@color/black_text"
                    android:id="@+id/tv_insurant_car_text"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_28px"
                    android:textColor="@color/black_text"
                    android:text="豫A12345"
                    android:layout_toRightOf="@+id/tv_insurant_car_text"
                    android:layout_marginLeft="10px"
                    android:id="@+id/tv_car_no"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝马"
                    android:textSize="@dimen/font_size_28px"
                    android:textColor="@color/c_4c4c4c"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_car_brand_name"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保单实付金额:"
                    android:textSize="@dimen/font_size_28px"
                    android:textColor="@color/c_4c4c4c"
                    android:layout_below="@+id/tv_car_brand_name"
                    android:layout_marginTop="@dimen/little_font_size"
                    android:id="@+id/tv_actual_pay_text"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100.00元"
                    android:textSize="@dimen/font_size_28px"
                    android:textColor="@color/c_ef5350"
                    android:layout_below="@+id/tv_car_brand_name"
                    android:layout_marginTop="@dimen/little_font_size"
                    android:layout_toRightOf="@+id/tv_actual_pay_text"
                    android:layout_marginLeft="10px"
                    android:id="@+id/tv_actual_pay"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingTop="@dimen/item_margin"
                android:paddingBottom="@dimen/item_margin"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车主信息"
                    android:textSize="30px"
                    android:textColor="@color/c_1a1a1a"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/style_receipt_liner">

                <TextView
                    style="@style/style_receipt_text"
                    android:text="车主姓名"
                    />

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_car_user_name"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/common_padding2"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:hint="请输入车主姓名"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_size_28px"/>
            </LinearLayout>

            <include layout="@layout/common_divider"/>

            <LinearLayout
                style="@style/style_receipt_liner">

                <TextView
                    style="@style/style_receipt_text"
                    android:text="身份证号"
                    />

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_car_user_card"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/common_padding2"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:hint="请输入车主身份证号"
                    android:inputType="number"
                    android:digits="0123456789Xx"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_size_28px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingTop="@dimen/item_margin"
                android:paddingBottom="@dimen/item_margin"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收件人信息"
                    android:textSize="30px"
                    android:textColor="@color/c_1a1a1a"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/style_receipt_liner">

                <TextView
                    style="@style/style_receipt_text"
                    android:text="收件人姓名"
                    />

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_consignee_name"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/common_padding2"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:hint="请输入收件人姓名"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_size_28px"/>
            </LinearLayout>

            <include layout="@layout/common_divider"/>

            <LinearLayout
                style="@style/style_receipt_liner">

                <TextView
                    style="@style/style_receipt_text"
                    android:text="收件人手机号"
                    />

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_consignee_mobile"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/common_padding2"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:hint="请输入收件人手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_size_28px"/>
            </LinearLayout>

            <include layout="@layout/common_divider"/>

            <LinearLayout
                style="@style/style_receipt_liner"
                >

                <TextView
                    style="@style/style_receipt_text"
                    android:text="收件地址"
                    />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:hint="请选择省市县"
                    android:maxLines="1"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text"
                    android:textSize="@dimen/font_size_28px"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_padding2"
                    android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>

            <include layout="@layout/common_divider"/>

            <LinearLayout
                style="@style/style_receipt_liner">

                <TextView
                    style="@style/style_receipt_text"
                    android:text="详细地址"
                    />

                <com.victor.che.widget.ClearEditText
                    android:id="@+id/et_address_detail"
                    style="@style/common_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/common_padding2"
                    android:background="@color/white"
                    android:cursorVisible="true"
                    android:hint="请输入街道、楼牌号"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/font_size_28px"/>
            </LinearLayout>



        </LinearLayout>





    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingRight="@dimen/common_padding2"
        >

        <Button
            android:id="@id/btn_operate"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/sl_confirm_pay"
            android:text="提交并支付保费"
            android:textColor="@color/white"
            android:textSize="32px"/>

    </LinearLayout>

</LinearLayout>