<?xml version="1.0" encoding="UTF-8"?><!-- 订单中的产品子项 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:minHeight="80dp"
              android:orientation="vertical"
              android:paddingBottom="@dimen/common_padding2"
              android:paddingTop="@dimen/common_padding2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轿车普洗"
            android:textColor="@color/black_text"
            android:textSize="@dimen/middle_font_size"/>

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0.00元"
            android:textColor="@color/black_text"
            android:textSize="26px"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding2">

        <TextView
            android:id="@+id/tv_available_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可使用数量：2"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/font_size_28px"/>

        <TextView
            android:id="@+id/tv_product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="x 2"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/little_font_size"/>
    </RelativeLayout>


</LinearLayout>