<?xml version="1.0" encoding="utf-8"?>
<!-- 验证结果界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_topbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="96px"
                android:text="消费成功！"
                android:textColor="@color/theme_color"
                android:textSize="50px"/>

            <TextView
                android:id="@+id/tv_error_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="270px"
                android:text="请确认您的验证码输入正确，或检查您的余额是否充足。"
                android:textColor="@color/theme_color"
                android:textSize="32px"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/area_order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="96px"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本次消费:"
                        android:textColor="@color/dark_gray_text"
                        android:textSize="32px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32px"
                        android:text="本卡余额:"
                        android:textColor="@color/dark_gray_text"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_consume_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/loading"
                        android:textColor="@color/black_text"
                        android:textSize="32px"/>

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32px"
                        android:maxLines="1"
                        android:text="@string/loading"
                        android:textColor="@color/black_text"
                        android:textSize="32px"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_operate"
                android:layout_width="550px"
                android:layout_height="96px"
                android:layout_marginTop="270px"
                android:background="@drawable/sl_common_theme_btn_corner"
                android:gravity="center"
                android:onClick="back"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="32px"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>