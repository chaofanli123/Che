                    android:id="@+id/rl_input_area"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <EditText
                        android:id="@+id/et_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sl_feedback_edittext"
                        android:gravity="left|top"
                        android:hint="请输入你的整改建议"
                        android:maxLength="200"
                        android:maxLines="10"
                        android:minHeight="200dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/light_gray_text"
                        android:textSize="14sp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/label_height"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_40px"
                    android:text="其他处罚或处置"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/middle_font_size"/>
                <RelativeLayout
                    android:id="@+id/rl_lawOther"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <EditText
                        android:id="@+id/et_lawOther"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sl_feedback_edittext"
                        android:gravity="left|top"
                        android:hint="请输入其他处罚或处置"
                        android:maxLength="200"
                        android:maxLines="10"
                        android:minHeight="200dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/light_gray_text"
                        android:textSize="14sp"/>
                </RelativeLayout>
            </LinearLayout>
