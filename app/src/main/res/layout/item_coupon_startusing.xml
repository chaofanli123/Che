<?xml version="1.0" encoding="utf-8"?>
<!--管理优惠券子item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="¥"
                android:textColor="@color/c_ef5350"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="40"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_coupon"
                android:textColor="@color/c_ef5350"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_money_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="满200可用"
                android:layout_below="@id/tv_coupon_price"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/little_font_size"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_coupon_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="仅限购买从单气服务"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_size_28px"
                android:layout_marginTop="26dp"
                />

            <TextView
                android:id="@+id/tv_coupon_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_below="@id/tv_coupon_message"
                android:text="限2017-6-7至2017-6-7使用"
                android:textColor="@color/light_gray_text"
                android:textSize="11sp"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right"/>
        <!--android:background="@drawable/sl_common_theme_btn_corner"-->

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/tv_send_coupon_history"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:background="@drawable/sl_btn_goto_index"
            android:gravity="center"
            android:paddingLeft="@dimen/common_padding2"
            android:paddingRight="@dimen/common_padding2"
            android:text="发券记录"
            android:textColor="@color/dark_gray_text"
            android:textSize="26px"/>
        <TextView
            android:id="@+id/tv_forbidden"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:background="@drawable/sl_btn_goto_index"
            android:gravity="center"
            android:paddingLeft="@dimen/common_padding2"
            android:paddingRight="@dimen/common_padding2"
            android:text="禁用"
            android:textColor="@color/dark_gray_text"
            android:textSize="26px"/>
        <TextView
            android:id="@+id/tv_send_coupon"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_padding2"
            android:background="@drawable/sl_btn_recharge"
            android:gravity="center"
            android:paddingLeft="@dimen/common_padding2"
            android:paddingRight="@dimen/common_padding2"
            android:text="发券"
            android:textColor="@color/textcolor_theme_color_pressed"
            android:textSize="26px"/>


    </LinearLayout>
</LinearLayout>
