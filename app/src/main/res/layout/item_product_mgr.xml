<?xml version="1.0" encoding="UTF-8"?><!-- 产品管理子项 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="144px"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/area_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/sl_common_white_btn"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_padding2"
        android:paddingLeft="@dimen/common_padding2"
        android:paddingTop="@dimen/common_padding2">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="轿车普洗"
            android:textColor="@color/black_text"
            android:textSize="@dimen/middle_font_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="238px"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="原价:"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:maxLines="1"
                    android:text="50元"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="26px"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="售价:"
                android:textColor="@color/dark_gray_text"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_sale_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:maxLines="1"
                android:text="400元"
                android:textColor="@color/dark_gray_text"
                android:textSize="26px"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/area_operate"
        android:layout_width="110px"
        android:layout_height="match_parent"
        android:background="#fafafa">

        <TextView
            android:id="@+id/tv_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_off_sale"
            android:text="下架"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/little_font_size"/>
    </RelativeLayout>


</LinearLayout>

