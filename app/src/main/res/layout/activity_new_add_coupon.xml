<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_add_coupon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg"
    tools:context="com.victor.che.ui.Coupon.NewAddCouponActivity">
    <include layout="@layout/top_bar_text_text"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
    <LinearLayout
        style="@style/style_receipt_liner"
        >
        <TextView
            android:id="@+id/tv_name2"
            style="@style/style_receipt_text"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="名称："
            />

        <com.victor.che.widget.ClearEditText
            android:id="@+id/et_name"
            style="@style/common_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:cursorVisible="true"
            android:hint="请输入名称"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/dark_gray_text"
            android:textColorHint="@color/gray_text"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_28px"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券名称"
            android:layout_marginRight="16dp"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/font_size_28px"
            android:visibility="gone"
            />
    </LinearLayout>
            <include layout="@layout/common_divider"/>
    <LinearLayout
        android:id="@+id/area_price"
        style="@style/style_receipt_liner"
        >
        <TextView
            android:id="@+id/tv_mianz"
            style="@style/style_receipt_text"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="面值："
            />

        <EditText
            android:id="@+id/et_price"
            style="@style/common_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/dark_gray_text"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_28px"
            android:hint="请输入面值"
            android:textColorHint="@color/gray_text"
            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:layout_marginRight="16dp"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/font_size_28px"
            />

    </LinearLayout>

    <include layout="@layout/common_divider"/>
    <LinearLayout
        android:id="@+id/area_full_price"
        style="@style/style_receipt_liner"
        >
        <TextView
            style="@style/style_receipt_text"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="满多少可用："
            />

        <EditText
            android:id="@+id/et_full_price"
            style="@style/common_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/dark_gray_text"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_28px"
            android:hint="请输入满多少可用金额"
            android:textColorHint="@color/gray_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:layout_marginRight="16dp"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/font_size_28px"
            />

    </LinearLayout>

    <RelativeLayout
        style="@style/style_receipt_liner"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            style="@style/style_receipt_text"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="每人限领一张"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/img_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <RelativeLayout
        style="@style/style_receipt_liner"
        >

        <TextView
            style="@style/style_receipt_text"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="开始发放时间"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_first_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:maxLines="1"
            android:hint="请选择开始发放时间"
            android:textColor="@color/black_text"
            android:textColorHint="@color/light_gray_text"
            android:textSize="@dimen/font_size_26px"/>
    </RelativeLayout>
    <include layout="@layout/common_divider"/>
    <RelativeLayout
        style="@style/style_receipt_liner"
        >

        <TextView
            style="@style/style_receipt_text"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="发放结束时间"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:maxLines="1"
            android:hint="请选择结束发放时间"
            android:textColor="@color/black_text"
            android:textColorHint="@color/light_gray_text"
            android:textSize="@dimen/font_size_26px"/>
    </RelativeLayout>
    <include layout="@layout/common_divider"/>
    <LinearLayout
        style="@style/style_receipt_liner"
        >
        <TextView
            style="@style/style_receipt_text"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="发放总数量："
            />

        <EditText
            android:id="@+id/et_total_quantity"
            style="@style/common_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColor="@color/dark_gray_text"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_28px"
            android:hint="请输入数量"
            android:textColorHint="@color/gray_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张"
            android:layout_marginRight="16dp"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/font_size_28px"
            />

    </LinearLayout>

    <include layout="@layout/common_divider"/>
    <LinearLayout
        style="@style/style_receipt_liner"
        >
        <TextView
            style="@style/style_receipt_text"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="有效天数："
            />

        <EditText
            android:id="@+id/et_number_days"
            style="@style/common_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColor="@color/dark_gray_text"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_28px"
            android:hint="请输入天数"
            android:textColorHint="@color/gray_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:layout_marginRight="16dp"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/font_size_28px"
            />

    </LinearLayout>

    <RelativeLayout
        style="@style/style_receipt_liner"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            style="@style/style_receipt_text"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="可用服务"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_usable_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:hint="请选择可用服务"
            android:textColor="@color/black_text"
            android:textColorHint="@color/light_gray_text"
            android:textSize="@dimen/font_size_26px"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/style_receipt_text"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="描述："
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/et_describe"
            style="@style/common_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:cursorVisible="true"
            android:hint="请输入描述"
            android:layout_marginTop="10dp"
            android:imeOptions="actionSearch"
            android:textColor="@color/dark_gray_text"
            android:textColorHint="@color/gray_text"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/font_size_28px"
            android:layout_marginRight="16dp"
            />

    </LinearLayout>

       </LinearLayout>

    </ScrollView>
</LinearLayout>
