<?xml version="1.0" encoding="utf-8"?><!--会员卡列表子项-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/common_padding2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="5次洗车卡"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_28px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_vipcard_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:text="C00132"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_size_28px"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/area_customer_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="可用服务："
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/little_font_size"/>

        <TextView
            android:id="@+id/tv_service_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="18888888"
            android:textColor="@color/black_text"
            android:textSize="@dimen/little_font_size"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="有效期："
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/little_font_size"/>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/label_end_time"
            android:maxLines="1"
            android:text="永久"
            android:textColor="@color/black_text"
            android:textSize="@dimen/little_font_size"/>


        <TextView
            android:id="@+id/tv_remain_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:text="0.00元"
            android:textColor="#e53935"
            android:textSize="@dimen/little_font_size"/>

        <TextView
            android:id="@+id/label_remain_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@id/tv_remain_value"
            android:maxLines="1"
            android:text="余额："
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/little_font_size"/>

    </RelativeLayout>
</LinearLayout>
