<?xml version="1.0" encoding="utf-8"?><!--会员卡列表子项-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shp_item_vipcard_mgr_footer"
        android:padding="@dimen/common_padding2">

        <TextView
            android:id="@+id/tv_vipcard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="C00132"
            android:textColor="@color/black_text"
            android:textSize="@dimen/middle_font_size"/>

        <TextView
            android:id="@+id/tv_vipcard_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:text="5次洗车卡"
            android:textColor="@color/light_gray_text"
            android:textSize="@dimen/little_font_size"/>

        <TextView
            android:id="@+id/tv_customer_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_vipcard_name"
            android:layout_marginTop="@dimen/item_margin"
            android:maxLines="1"
            android:text="137000000"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/font_size_28px"/>

        <TextView
            android:id="@+id/tv_pln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_customer_mobile"
            android:layout_below="@id/tv_vipcard_name"
            android:maxLines="1"
            android:text="137000000"
            android:textColor="@color/light_gray_text"
            android:textSize="14sp"/>

    </RelativeLayout>

    <include layout="@layout/common_divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/white"
        android:paddingRight="@dimen/common_padding2">

        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="124px"
            android:layout_height="44px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sl_btn_recharge"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/textcolor_recharge"
            android:textSize="@dimen/little_font_size"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="124px"
            android:layout_height="44px"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px"
            android:layout_toLeftOf="@id/tv_recharge"
            android:background="@drawable/sl_btn_goto_index"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/little_font_size"/>


    </RelativeLayout>
</LinearLayout>
