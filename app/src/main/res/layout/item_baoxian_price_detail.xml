<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_marginTop="@dimen/common_padding2"
              android:paddingLeft="@dimen/common_padding2"
              android:paddingRight="@dimen/common_padding2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="险种"
        android:textColor="@color/black_text"
        android:textSize="@dimen/little_font_size"
        android:id="@+id/tv_insurance_name"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="保额"
        android:gravity="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/little_font_size"
        android:id="@+id/tv_insurance_coverage"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="不计免赔"
        android:gravity="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/little_font_size"
        android:id="@+id/tv_is_free"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="保费"
        android:gravity="right"
        android:textColor="@color/black_text"
        android:textSize="@dimen/little_font_size"
        android:id="@+id/tv_insurance_premium"
        />

</LinearLayout>