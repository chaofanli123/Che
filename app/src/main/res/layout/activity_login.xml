<?xml version="1.0" encoding="utf-8"?>
<!-- 登录界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004fa2"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/icon_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dl_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wz_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78px"
            android:layout_marginTop="90px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_padding2"
            android:paddingRight="@dimen/common_padding2">

            <com.victor.che.widget.ClearEditText
                android:id="@+id/et_username"
                style="@style/common_edittext"
                android:drawableLeft="@drawable/zh"
                android:drawablePadding="@dimen/dp_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/common_padding2"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请输入账号"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2"
                android:textColor="@color/white"
                android:textColorHint="#cccccc"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/middle_font_size"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/xt"/>

        <LinearLayout
            android:id="@+id/area_pwd"
            android:layout_width="match_parent"
            android:layout_height="78px"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/common_padding2"
            android:layout_marginRight="@dimen/common_padding2">
            <com.victor.che.widget.ClearEditText
                android:id="@+id/et_pwd"
                android:drawableLeft="@drawable/mm"
                android:drawablePadding="@dimen/dp_10"
                style="@style/common_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2"
                android:textColor="@color/white"
                android:textColorHint="#cccccc"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/middle_font_size"/>

            <CheckBox
                android:id="@+id/chk_show_pwd"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginLeft="@dimen/common_padding2"
                android:layout_marginRight="@dimen/common_padding2"
                android:background="@drawable/sl_show_hide_pwd"
                android:button="@null"/>

        </LinearLayout>

        <com.victor.che.widget.ClearEditText
            android:id="@+id/et_captcha"
            style="@style/common_edittext"
            android:layout_width="match_parent"
            android:layout_height="78px"
            android:layout_marginLeft="@dimen/common_padding2"
            android:layout_marginRight="@dimen/common_padding2"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/common_padding2"
            android:paddingRight="@dimen/common_padding2"
            android:textColor="@color/white"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/middle_font_size"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/common_padding2"
            android:layout_marginRight="@dimen/common_padding2"
            android:background="@drawable/xt"/>
        <TextView
            android:id="@id/btn_operate"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_login_button"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:text="登 录"
            android:textColor="@color/textcolor_white_pressed"
            android:textSize="@dimen/large_font_size"
            android:textStyle="bold"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>