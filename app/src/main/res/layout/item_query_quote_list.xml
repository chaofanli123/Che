<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:paddingLeft="@dimen/common_padding2"
                android:paddingRight="@dimen/common_padding2"
              android:layout_height="144px">

    <ImageView
        android:layout_width="154px"
        android:layout_height="64px"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:id="@+id/iv_company_icon"
        android:src="@drawable/icon_taipingyang_insurance"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right"
        android:id="@+id/iv_right"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200.00å…ƒ"
        android:textSize="@dimen/font_size_28px"
        android:textColor="@color/theme_color"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_right"
        android:layout_marginRight="@dimen/common_padding2"
        android:id="@+id/tv_total_price"
        />

</RelativeLayout>