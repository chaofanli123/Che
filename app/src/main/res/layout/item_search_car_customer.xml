<?xml version="1.0" encoding="utf-8"?><!--车辆列表子项-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:padding="@dimen/common_padding2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_car_avatar"
        android:layout_width="104px"
        android:layout_height="104px"
        android:layout_marginRight="@dimen/common_padding2"
        android:src="@drawable/ic_car_pre"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_customer_avatar"
        android:layout_width="104px"
        android:layout_height="104px"
        android:layout_marginRight="@dimen/common_padding2"
        android:scaleType="centerCrop"
        app:riv_corner_radius="2dp"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="法拉利"
            android:textColor="@color/black_text"
            android:textSize="@dimen/middle_font_size"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/item_margin"
            android:maxLines="1"
            android:text="京A88888"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/font_size_28px"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:text="豫A11111"
            android:textColor="@color/light_gray_text"
            android:textSize="13sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_pln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:text="aaaa"
        android:textColor="@color/black_text"
        android:textSize="@dimen/font_size_28px"
        android:visibility="gone"/>

</LinearLayout>
